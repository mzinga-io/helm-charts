{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "groupName": "minors",
      "automerge": true,
      "autoApprove": true
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "groupName": "devDependencies",
      "automerge": true,
      "autoApprove": true
    }
  ],
  "separateMultipleMajor": true,
  "platformAutomerge": true,
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "github-tags",
      "packageNameTemplate": "mzinga-io/mzinga-apps",
      "managerFilePatterns": [
        "^charts/mzinga/Chart\\.yaml$",
        "^charts/mzinga/values\\.yaml$"
      ],
      "matchStrings": [
        "#\\s*renovate: image=(?<depName>.*?)\\s+appVersion:\\s*[\"']?(?<currentValue>[\\w+\\.\\-]*)",
        "#\\s*renovate: image=(?<depName>.*?)\\s+tag:\\s*[\"']?(?<currentValue>[\\w+\\.\\-]*)"
      ]
    }
  ]
}